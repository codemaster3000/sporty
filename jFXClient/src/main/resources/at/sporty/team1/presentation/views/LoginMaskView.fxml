<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<GridPane hgap="15.0" vgap="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="at.sporty.team1.presentation.controllers.LoginMaskViewController">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER"/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints valignment="BASELINE" vgrow="ALWAYS"/>
        <RowConstraints valignment="BASELINE" vgrow="ALWAYS"/>
    </rowConstraints>
    <padding>
        <Insets left="15.0" right="15.0" top="15.0"/>
    </padding>

    <Label text="Username:"/>
    <TextField fx:id="_usernameField" promptText="username" minWidth="225.0"
               GridPane.columnIndex="1"/>

    <Label text="Password:" GridPane.rowIndex="1"/>
    <PasswordField fx:id="_passwordField" promptText="password" minWidth="225.0"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>
</GridPane>
