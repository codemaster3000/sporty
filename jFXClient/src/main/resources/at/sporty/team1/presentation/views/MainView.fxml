<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="_borderPanel" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.sporty.team1.presentation.controllers.MainViewController">
    <top>
        <ToolBar AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <TextField fx:id="_searchField" prefWidth="200.0" promptText="SEARCH"/>
            <Label text="by"/>
            <ComboBox fx:id="_searchType" GridPane.columnIndex="1" GridPane.rowIndex="7" HBox.hgrow="SOMETIMES"/>
            <CheckBox fx:id="_feePaidCheckbox" mnemonicParsing="false" text="Fee paid"/>
            <CheckBox fx:id="_feeNotPaidCheckbox" mnemonicParsing="false" text="Fee not paid">
                <padding>
                    <Insets right="20.0"/>
                </padding>
            </CheckBox>
            <Button onAction="#startSearch" prefHeight="31.0" prefWidth="94.0" text="GO" HBox.hgrow="NEVER">
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
            </Button>
        </ToolBar>
	</top>
	<center>
		<TabPane fx:id="_tabPanel" tabMaxHeight="Infinity" BorderPane.alignment="CENTER" />
	</center>
</BorderPane>
