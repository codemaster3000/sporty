<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/8"
            fx:controller="at.sporty.team1.presentation.controllers.SearchViewController">
    <ToolBar AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0">
        <TextField fx:id="_searchField" HBox.hgrow="ALWAYS"/>
        <Button text="GO" onAction="#startSearch" HBox.hgrow="NEVER"/>
    </ToolBar>
    <ScrollPane fitToWidth="true" fitToHeight="true" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="35.0"
                AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0">
        <AnchorPane>
            <ListView fx:id="_searchResultsListView" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"
                      AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0"/>
        </AnchorPane>
    </ScrollPane>
</AnchorPane>
