<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/8"
      fx:controller="at.sporty.team1.presentation.controllers.TournamentSearchViewController"
      fx:id="_searchBox" alignment="TOP_CENTER" styleClass="searchBox">
    <GridPane alignment="CENTER_LEFT" hgap="5.0" vgap="5.0">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER"/>
            <ColumnConstraints hgrow="SOMETIMES"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="NEVER"/>
        </rowConstraints>
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </VBox.margin>

        <Label text="Search by:">
            <font>
                <Font name="System Bold"/>
            </font>
        </Label>
        <AnchorPane GridPane.columnIndex="1"  GridPane.hgrow="ALWAYS">
            <ComboBox fx:id="_searchType" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
        </AnchorPane>
    </GridPane>
</VBox>
