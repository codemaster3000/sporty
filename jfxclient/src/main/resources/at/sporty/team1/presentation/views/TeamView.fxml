<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.sporty.team1.presentation.controllers.TeamViewController">
    <ToolBar VBox.vgrow="NEVER">
        <Label text="Choose Team:"/>
        <ComboBox fx:id="_chooseTeamComboBox"/>
    </ToolBar>
    <ListView fx:id="_membersListView" VBox.vgrow="ALWAYS"/>
    <ToolBar VBox.vgrow="NEVER">
        <Pane HBox.hgrow="ALWAYS"/>
        <Button mnemonicParsing="false" onAction="#saveTeam" text="Save" HBox.hgrow="NEVER"/>
        <Separator orientation="VERTICAL"/>
        <Button mnemonicParsing="false" onAction="#removeSelectedMember" text="Remove selected member"/>
    </ToolBar>
</VBox>
